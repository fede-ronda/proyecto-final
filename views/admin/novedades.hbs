<div class="container" id="boton-salir">
  <p class="text-right">
    <span style="background: rgba(0, 0, 0, .8); color: #fff;">
      Bienvenido
      {{usuario}}!</span>
    <a href="/admin/login/logout" class="btn btn-danger">Salir
      <i class="fas fa-sign-out-alt"></i></a>
  </p>
</div>
<br />
{{! caja }}
<div class="novedades-admin">
  {{! fila 1 }}

  <div class="row listado-background">
    <div class="col">
      <h2 id="listado-titulo">LISTADO DE NOVEDADES</h2>
    </div>
    <div class="col listado-boton" >
      <a href="/admin/novedades/agregar" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Nuevo
      </a>
    </div>
  </div>

  {{! fila 2 }}
<div class="tabla" style="width: 80% ;">
  <table class="table table-dark table-striped" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col">Imagen</th>
      <th scope="col" class="text-right">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each novedades}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{titulo}}</td>
      <td>{{{imagen}}}</td>
      <td class="text-right">
        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary btn-sm"><i class="fas fa-pencil-alt"></i></a>
        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
      </td>
      {{/each}}
    </tr>
  </tbody>
</table>
</div>
  {{! fila 3 }}
  {{! fila 4 }}
  {{! fila 5 }}
</div>