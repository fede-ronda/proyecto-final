
<form class="login" action="/admin/login" method="post">
    <div class="form-group">
        <label for="usuario" style="color:#fff;">User</label>
        <input type="text" class="form-control" id="usuario" aria-describedby="emailHelp" name="usuario">
    </div>
    <div class="form-group" id="pass">
        <label for="exampleInputPassword1" style="color:#fff;">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="password">
    </div>
    <div class="login-button">
      <button type="submit" class="btn btn-warning">Enviar</button>
    </div>

    {{#if error}}
    <p id="errorUser"> Usuario o contrase√±a incorrectos </p>
    {{/if}}
</form>
